      <!-- Botão de menu mobile -->
      <button id="menu-toggle" class="sm:hidden text-gray-300 hover:text-purple-500 focus:outline-none text-2xl">
        <i class="fas fa-bars"></i>
      </button>
  
      <!-- Menu de navegação -->
      <nav id="menu" class="hidden sm:flex space-x-6 text-base">
        <ul class="flex flex-col sm:flex-row sm:items-center sm:space-x-6 space-y-4 sm:space-y-0 mt-4 sm:mt-0">
